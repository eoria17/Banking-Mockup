@using Microsoft.AspNetCore.Identity
@using s3827202_s3687609_a2.Areas.Identity.Data

@inject SignInManager<BankDbUser> SignInManager
@inject UserManager<BankDbUser> UserManager

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Banking" asp-controller="Customer" asp-action="Index">My Accounts</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Banking" asp-controller="Atm" asp-action="AtmTransaction">Atm Transaction</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Banking" asp-controller="Statement" asp-action="Index">My Statements</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Banking" asp-controller="BillPay" asp-action="Index">My Bills</a>
    </li>
}
else if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="TransactionHistory" asp-action="Index">Transaction Management</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="CustomerLock" asp-action="Index">Customer Management</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="BillPay" asp-action="Index">Bill Management</a>
    </li>
}
