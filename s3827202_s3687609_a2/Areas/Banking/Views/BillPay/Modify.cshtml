@model BillPay
@{ 
    ViewData["Title"] = "Modify";
}

<h1 class="display-4">Modify bill pay</h1>

<h4>Bill Pay ID - @Model.BillPayID</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Modify">
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <span class="form-control">@Html.DisplayFor(model => model.AccountNumber)</span>
            </div>
            <div class="form-group">
                <label asp-for="Payee.PayeeName" class="control-label"></label>
                <span class="form-control">@Html.DisplayFor(model => model.Payee.PayeeName)</span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDate" class="control-label"></label>
                <input asp-for="ScheduleDate" type="date" placeholder="dd-MM-YYYY" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <select asp-for="Period" class="form-control">
                    <option value="Monhly">Monhly</option>
                    <option value="Quarterly">Quarterly</option>
                    <option value="OnceOff">OnceOff</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Modify" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

