@model s3827202_s3687609_a2.ViewModel.AtmTransactionViewModel
@using s3827202_s3687609_a2.ViewModel
@{ 
    ViewData["Title"] = "ATM Transaction";
}

<h1 class="display-4">ATM Transaction</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AtmTransaction">
            <div class="form-group">
                <label asp-for="TransactionTypeVM" class="form-control-label"></label>
                <select asp-for="TransactionTypeVM" class="form-control selectpicker bs-select-hidden" asp-items="Html.GetEnumSelectList<TransactionTypeVM>()">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SourceAccount" class="form-control-label"></label>
                <select asp-for="SourceAccount" class="form-control selectpicker bs-select-hidden" asp-items="Model.SourceAccounts"></select>
            </div>
            <div class="form-group">
                <label asp-for="DestAccount" class="form-control-label"></label>
                <select asp-for="DestAccount" class="form-control selectpicker bs-select-hidden" asp-items="Model.DestinationAccounts">
                    <option value="" selected></option>
                </select>
                <span asp-validation-for="DestAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
            </div>
            <div class="form-group">
                <a class="btn btn-primary"
                   asp-controller="Customer" asp-action="Index" >Cancel Transaction</a>
                <input type="submit" value="Execute Transaction" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
